{
  "name": "viyv-claude-plugin-core",
  "version": "1.0.0",
  "description": "Core library for Claude plugin management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "plugin",
    "manager",
    "anthropic",
    "claude-code"
  ],
  "author": "brainfiber inc. <hiroki.takezawa@brainfiber.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brainfiber/viyv-claude-plugin.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/brainfiber/viyv-claude-plugin#readme",
  "bugs": {
    "url": "https://github.com/brainfiber/viyv-claude-plugin/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.13",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.13"
  }
}
